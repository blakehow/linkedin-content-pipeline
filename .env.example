# Application Settings
APP_ENV=development
DEBUG_MODE=True
LOG_LEVEL=INFO

# Data Storage
# Options: mock, google_sheets
DATA_STORAGE_TYPE=mock

# Google Sheets (if using google_sheets storage)
GOOGLE_SHEETS_CREDS_FILE=./credentials.json
GOOGLE_SHEET_ID=your-sheet-id-here

# AI Service Configuration
# Options: mock, ollama, gemini
AI_SERVICE_PRIMARY=ollama
AI_SERVICE_FALLBACK=gemini

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your-api-key-here

# Twitter/X API (optional, for auto-posting)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# LinkedIn API (optional, for auto-posting)
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# Demo Mode
DEMO_MODE=True
LOAD_SAMPLE_DATA=True
